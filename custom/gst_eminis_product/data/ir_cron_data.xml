<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="update_changed_price_job" model="ir.cron">
        <field name="name">Automatic Update Changed Price in products</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="state">code</field>
        <field name="code">model._update_changed_price()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')"/>
    </record>
</odoo>
