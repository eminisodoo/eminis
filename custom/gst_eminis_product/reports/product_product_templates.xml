<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="report_simple_label_eminis">
            <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                <div class="text-center" t-att-style="table_style">
                    <div class="o_label_name" style="line-height: 100%;height:12.0em;background-color: transparent;">
                        <p style="margin-bottom: 12px;font-size:12px;">
                            <span t-if="product.is_product_variant" t-field="product.display_name"/>
                            <span t-else="" t-field="product.name"/>
                        </p>
                        <p style="margin-bottom: 3px;">
                            <strong><span t-field="product.default_code"/></strong>
                        </p>
                        <p style="margin-bottom: 8px;">
                            <t t-if="product.is_product_variant">
                                <span class="o_label_price_small" t-field="product.lst_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                                <t t-if="not product.offer_price == product.lst_price">
                                    <strong>Ofer: <span class="o_label_price_small" t-field="product.offer_price" t-options="{'widget': 'monetary', 'label_price': True}"/></strong>
                                </t>
                            </t>
                            <t t-else="">
                                <span class="o_label_price_small" t-field="product.list_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                                <t t-if="not product.offer_price == product.list_price">
                                    <strong>Ofer: <span class="o_label_price_small" t-field="product.offer_price" t-options="{'widget': 'monetary', 'label_price': True}"/></strong>
                                </t>
                            </t>
                        </p>
                        <p style="margin-bottom: 0px;font-size:11px;">
                            <span t-esc="request.env.user.partner_id.parent_id.website"/>
                        </p>
                    </div>
                </div>
            </div>
        </template>

        <template id="report_productlabel_eminis">
            <t t-call="web.html_container">
                <t t-set="table_style" t-value="'width:51mm;height:76mm;'"/>
                <t t-set="padding_page" t-value="'padding: 2mm'"/>
                <t t-foreach="quantity.items()" t-as="barcode_and_qty_by_product">
                    <t t-set="product" t-value="barcode_and_qty_by_product[0]"/>
                    <t t-foreach="barcode_and_qty_by_product[1]" t-as="barcode_and_qty">
                        <t t-foreach="range(barcode_and_qty[1])" t-as="qty">
                            <t t-call="gst_eminis_product.report_simple_label_eminis"/>
                        </t>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
