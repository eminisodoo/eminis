<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="ProductScreen"
        t-inherit="point_of_sale.ProductScreen"
        t-inherit-mode="extension">

        <xpath expr="//div[@class='product-screen screen']" position="inside">
            <div class="alert_box hidden">
                <div class="message_box">
                    <span class="fa-3x"><i class="fa fa-spinner fa-spin"/></span>
                    <label class="message_text">Alert message</label>
                </div>
            </div>
        </xpath>

    </t>
</templates>
